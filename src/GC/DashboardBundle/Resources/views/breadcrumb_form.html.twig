{% extends 'GCDashboardBundle::layout.html.twig' %}

{% block body %}
	{% block breadcrumbs %}
		<div class="row">
			<div class="span1">
				<img src="{{asset('img/music_note1.png')}}" width=60 alt="" />
			</div>
			<div class="span3">
				<h3>Describe your groove</h3>
			</div>
			<div class="span1">
				{% if (phase) < 1  set ext = 'off' endif %}
				<img src="{{asset('img/music_note2' ~ '.png')}}" width=60  alt="" />
			</div>
			<div class="span3">
				<h3>Contest Details</h3>
			</div>			
			<div class="span1">
				<img src="{{asset('img/music_note3_off.jpg')}}" width=60  alt="" />
			</div>
			<div class="span3">
				<h3>Launch your Contest</h3>
			</div>					
		</div>
	{% endblock %}

	<div class="row form-header">
		<div class="span12">
			{% block formheader %}
				<h1>Select a category</h1>
			{% endblock %}
		</div>
	</div>

	{% block formbody %}
		<h3>Form body placeholder</h3>
	{% endblock %}

	{% block minorbreadcrumbs %}
		<div class="minorbreadcrumbs row center">
			<img src="http://placehold.it/400x20&text=minor breadcrumbs placeholder" />
		</div>
	{% endblock %}

	{% block backbutton %}
		<form action="{{ path('project_new') }}" method="GET">
			<div class="row center">
				<div class="span12">
					<button type="submit" class="btn btn-primary">Back</button>
					<input type="hidden" name="back" value="1" />
				</div>
			</div>			
		</form>
	{% endblock %}

{% endblock %}
