{% extends 'GCDashboardBundle::layout.html.twig' %}

{% block javascripts %}
	{{ parent() }}
	<script id="arrow-template" type="text/x-handlebars-template">
	{% raw %}
		<div id='{{id}}' class='contestLengthWidgetArrow'>
			{{#if left}}
			<h5 style='width: 60px; position:relative; left:-{{ offset }}px;'>{{ label }}</h5>
			<img src='/img/arrow-blue-outline-down-23x30.png'></img>
			{{else}}
			<img src='/img/arrow-blue-outline-up-23x30.png'></img>			
			<h5 style='width: 60px; position:relative; left:-{{ offset }}px;'>{{ label }}</h5>
			{{/if}}			
		</div>
	{% endraw %}
	</script>

	 <script type="text/javascript" src="http://www.labs.mimmin.com/countdown/remaining.js"></script>
    {% javascripts     	
    	'../app/Resources/public/js/moment.min.js'    	
		'../app/Resources/public/js/backbone/underscore.js'    	
		'../app/Resources/public/js/backbone/json2.js'    	
		'../app/Resources/public/js/backbone/backbone-min.js'
		'../app/Resources/public/js/handlebars-1.0.0.beta.6.js'		
		'@GCDashboardBundle/Resources/public/js/contestlengthwidget.js'
    	output="js/main.js"
	%}
	    <script type="text/javascript" src="{{ asset_url }}"></script>
	{% endjavascripts %}

{% endblock %}

{% block body %}
	<div class="subnav">
		{% block subnav %}
		    <ul class="nav nav-tabs">		    
		      <li class="{% if app.request.attributes.get('_route') == 'dashboard_index' %}active{% endif %}"><a href="#">Current Contests</a></li>
		      <li class=""><a href="#">Recent Activity</a></li>
		      <li class=""><a href="#">Past Contests</a></li>
		      <li class=""><a href="#">Payment History</a></li>
		    </ul>
		{% endblock %}
	</div>	
	<div id="projectHeader" class="container">	
		{% block project_header %}
			<div class="row">
				<div class="span12">
					<h3>{{project.title}}</h3>
					<span class="paymentAmount pull-right">${{ project.payoutAmount }}</span>
					<ul class="projectTypes">						
						<li><img src="http://placehold.it/24x24" alt="{{ project.projectType.slug }}" /><span>{{ project.projectType.name }}</span></li>
						<li><img src="http://placehold.it/24x24" alt="{{ project.category.slug }}" /><span>{{ project.category.name }}</span></li>
					</ul>
					<ul class="projectWatchLinks">
						<li><a href="#">Watch Project</a></li>
						<li><a href="#">Watch Category</a></li>
					</ul>
					<ul class="projectNavLinks span8">
						{% block projectNavLinks %}
							<li class='active'>Project Brief</li>
							<li><a href="#">Inspiration Board</a></li>
							<li><a href="#">Entries({{project.grooveCount}})</a></li>
						{% endblock %}
					</ul>
					<div id="contestLengthWidgetContainer" class="span4">
						<div id="contestLengthWidget" class="progress progress-info span4">
						    <div class="bar" data-fill="{{ project.percentComplete }}" data-length="{{project.contestLength}}"></div>					    
						</div>
						<div id="contestLengthWidgetCountdown" data-time="{{ project.expiresAt|date("Y-m-d H:i:s") }}"></div>
					</div>
				</div>					
			</div>
		</div>
		{% endblock %}
    </div>	
    <div class="project-content" class="span12">
		{% block project_content %}
			<p>hi</p>
		{% endblock %}
	</div>
{% endblock %}
