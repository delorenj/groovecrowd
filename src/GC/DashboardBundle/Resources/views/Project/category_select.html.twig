				      <img src="http://placehold.it/260x180" alt="">
				    </div>
				  <input type="hidden" name="category" value="video" />
				</form>				  
			  </li>
			  <li id="brand-jingle" class="span3 selectFormChoice">
				<form class="selectForm" action="{{ path('project_new') }}" method="POST">					  
				    <h2>Brand Jingle</h2>
				    <div class="thumbnail">
				      <img src="http://placehold.it/260x180" alt="">
				    </div>
				  <input type="hidden" name="category" value="brand-jingle" />				  
				</form>
			  </li>
			  <li id="other" class="span3 selectFormChoice">
				<form class="selectForm" action="{{ path('project_new') }}" method="POST">					  
			    	<h2>Other</h2>
			    	<div class="thumbnail">
			    	  	<img src="http://placehold.it/260x180" alt="">
			    	</div>
				  <input type="hidden" name="category" value="other" />				  
				</form>				  					  					  
			 </li>	
		</ul>					
	</div>
{% endblock %}
