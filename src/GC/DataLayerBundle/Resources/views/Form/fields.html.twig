{% extends 'form_div_layout.html.twig' %}

{% block choice_widget %}
    {% if expanded %}
            {% for child in form %}
                    <label class="radio">
                        {{ form_widget(child) }}
                        {{ form_label(child) }}
                    </label>
            {% endfor %}
    {% else %}
        {{ parent() }}
    {% endif %}
{% endblock choice_widget %}
 
{% block checkbox_label %}
    <span>{{ label }}</span>
{% endblock checkbox_label %}
 
{% block radio_label %}
    <span>{{ label }}</span>
{% endblock radio_label %}