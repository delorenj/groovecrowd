{% extends 'GCDashboardBundle::breadcrumb_form.html.twig' %}

{% block formheader %}
	<h1>Select a category</h1>
{% endblock %}

{% block formbody %}
	<div class="span12">
		<ul class="thumbnails">
			<li id="game" class="span3 selectFormChoice">
				<form class="selectForm" action="{{ path('project_new') }}" method="POST">	
			    	<h2>Apps &amp; Games</h2>
			    	<div class="thumbnail">
			      		<img src="http://placehold.it/260x180" alt="">
			    	</div>
			  		<input type="hidden" name="category" value="game" />
				</form>				    
			 </li>
			 <li id="video" class="span3 selectFormChoice">
				<form class="selectForm" action="{{ path('project_new') }}" method="POST">					
