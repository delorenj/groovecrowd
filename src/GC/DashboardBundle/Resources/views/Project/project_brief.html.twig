{% extends 'GCDashboardBundle::breadcrumb_form.html.twig' %}
{% form_theme form 'GCDataLayerBundle:Form:fields.html.twig' %}


{% block javascripts %}
	{{ parent() }}
	<script src="{{ asset('js/underscore.js') }}" type="text/javascript"></script>	
	<script src="{{ asset('js/json2.js') }}" type="text/javascript"></script>	
	<script src="{{ asset('js/backbone-min.js') }}" type="text/javascript"></script>	
    <script src="{{ asset('js/jquery.tagsinput.js') }}" type="text/javascript"></script>
	<script src="{{ asset ('js/yoxview/yoxview-init.js') }}" type="text/javascript"></script>
	<script src="{{ asset ('js/swfupload.swfobject.js') }}" type="text/javascript"></script>
	<script src="{{ asset ('js/swfupload.cookies.js') }}" type="text/javascript"></script>	
	<script src="{{ asset ('js/swfupload.queue.js') }}" type="text/javascript"></script>	
	<script src="{{ asset ('js/swfupload.speed.js') }}" type="text/javascript"></script>	
	<script src="{{ asset ('js/swfupload.js') }}" type="text/javascript"></script>
	<script src="{{ asset ('js/handlebars-1.0.0.beta.6.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/gc_project_brief.js') }}" type="text/javascript"></script>	
	<script type="text/x-handlebars-template" id="asset-thumbnail-template" >
		{% raw %}
		 	<li id='asset-{{id}}' class="span2">
		    	<a href="{{ uri }}" class="thumbnail">
		      		<img src="{{ thumbUri }}" alt="">
		      		<button class="close">&times;</button>
		    	</a>
		  	</li>
	  	{% endraw %}
	</script>
	<script type="text/x-handlebars-template" id="file-upload-template">
		{% raw %}
			<div id="divFileProgress" class="span3 alert {{ messagetype }}">
			  <button class="close" data-dismiss="alert">&times;</button>
			  <span id="file-upload-message">{{{ message }}}</span>
			    <div class="progress progress-striped active">
			       <div class="bar" style="width: {{ percentage }}%;"></div>
			    </div>    
			</div>
		{% endraw %}				
	</script>
	<script type="text/x-handlebars-template" id="upload-button-template">
	{% raw %}
		<div id="swf-container" class="span2 thumbnail">
			<div id="divFileProgressContainer"></div>					
			<span id="spanButtonPlaceholder"></span>
		</div>	
	{% endraw %}
	</script>
	<script type="text/x-handlebars-template" id="upload-alert-template">
	{% raw %}
		<div class="alert {{messagetype}}">
		  <p>{{{message}}}</p>
		</div>	
	{% endraw %}
	</script>
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('/css/css/jquery.tagsinput.css') }}" />
{% endblock %}

{% block formheader %}
{% endblock %}

{% block formbody %}
	<form class="form-horizontal" id='project-{{ id }}'action="{{ path('project_brief') }}" method="POST" {{ form_enctype(form) }} >
		{{ form_errors(form) }}
		<fieldset>
			<legend><h1>Description</h1></legend>
			<div class="control-group gc-control-label">
				{{ form_label(form.title) }}
				<div class="controls">
					{{ form_widget(form.title, {'attr': {'class': 'input-xlarge span6'}}) }}
					<p class="help-block">{{ form_errors(form.title) }}</p>	
				</div>			    			    
			</div>
			<div class="control-group gc-control-label">
				{{ form_label(form.description) }}
				<div class="controls">
					{{ form_widget(form.description, {'attr': {'class': 'input-xlarge span6'}}) }}
					<p class="help-block">{{ form_errors(form.description) }}</p>	
				</div>			    			    
			</div>
			<div class="control-group gc-control-label">
				{{ form_label(form.contest_length) }}
				<div class="controls">
					{{ form_widget(form.contest_length, {'attr': {'class': 'input-xlarge'}}) }}
					<p class="help-block">{{ form_errors(form.contest_length) }}</p>	
				</div>			    			    
			</div>									
			<div class="control-group gc-control-label">
				{{ form_label(form.tag_list) }}
				<div class="controls">
					{{ form_widget(form.tag_list, {'attr': {'class': 'input-xlarge tag-widget span6', 'value': tag_list}}) }}
					<p class="help-block">{{ form_errors(form.tag_list) }}</p>	
				</div>			    			    
			</div>						
		</fieldset>
		<fieldset>
			<h1>Media</h1>
			<div id="media-container">
				<ul></ul>
			</div>
		</fieldset>
		<input id="session_name" type="hidden" value="{{session.name}}" />
		<input id="session_id" type="hidden" value="{{session.id}}" />
		{{ form_rest(form) }}
		{{ parent() }}
		<a id="backbutton" class="btn btn-primary" href="{{ path('project_category_select') }}">Back</a>
	</form>
{% endblock %}


{% block minorbreadcrumbs %}{% endblock %}
